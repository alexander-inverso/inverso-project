    <script>
        // 1. Fecha estilo militar/técnico
        const now = new Date();
        document.getElementById('dateDisplay').innerText = now.toISOString().split('T')[0];

        // 2. Cargar tareas desde JSON (Simulación de OneNote)
        async function loadTasks() {
            const listContainer = document.getElementById('taskList');
            try {
                // Busca el archivo tasks.json en la misma carpeta
                const response = await fetch('tasks.json');
                if (!response.ok) throw new Error("Error de conexión");
                
                const data = await response.json();
                
                listContainer.innerHTML = ''; // Limpiar loader

                if(data.tasks.length === 0) {
                     listContainer.innerHTML = '<li class="text-gray-500 text-center py-4">Sin operaciones pendientes.</li>';
                     return;
                }

                data.tasks.forEach(task => {
                    const li = document.createElement('li');
                    li.className = "flex items-start space-x-3 group";
                    li.innerHTML = `
                        <span class="text-red-500 mt-0.5">►</span>
                        <span class="text-gray-300 group-hover:text-white transition-colors">${task}</span>
                    `;
                    listContainer.appendChild(li);
                });

            } catch (error) {
                listContainer.innerHTML = `
                    <li class="text-red-500 text-xs">
                        Error accediendo a base de datos local.<br>
                        Verifica 'tasks.json'.
                    </li>`;
            }
        }

        // Ejecutar carga
        loadTasks();

        // Script para intentar cerrar ventana (funciona mejor si la ventana fue abierta por script, 
        // pero en móviles suele funcionar como "atrás" o requiere permisos).
        // Si no cierra, redirige a google o una página en blanco.
    </script>
